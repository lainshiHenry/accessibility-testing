{
  "name": "axe DevTools Watcher",
  "version": "3.1.1",
  "description": "Codeless accessibility testing",
  "manifest_version": 3,
  "homepage_url": "https://deque.com",
  "permissions": ["debugger", "desktopCapture", "storage", "unlimitedStorage"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["axe.js", "content.js"],
      "run_at": "document_start"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["variables.json"],
      "matches": ["<all_urls>"]
    }
  ]
}
